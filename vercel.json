{
  "version": 2,
  "name": "auraa-luxury",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build",
        "buildCommand": "cd frontend && yarn install && yarn build"
      }
    },
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "functions": {
    "backend/server.py": {
      "maxDuration": 30
    }
  },
  "env": {
    "MONGO_URL": "@mongo_url",
    "REACT_APP_BACKEND_URL": "https://auraa-luxury.vercel.app"
  }
}