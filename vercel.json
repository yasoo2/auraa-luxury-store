{
  "version": 2,
  "name": "auraa-luxury-store", 
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "env": {
    "REACT_APP_BACKEND_URL": "@react_app_backend_url",
    "NODE_VERSION": "20"
  },
  "build": {
    "env": {
      "REACT_APP_BACKEND_URL": "@react_app_backend_url"
    }
  }
}