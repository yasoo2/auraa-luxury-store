{
  "name": "Auraa Luxury - Premium Accessories",
  "short_name": "Auraa Luxury",
  "description": "Premium accessories for discerning customers. Gold, pearl and luxury jewelry collection.",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "#D97706",
  "background_color": "#FFFBEB",
  "scope": "/",
  "lang": "ar",
  "dir": "rtl",
  "categories": ["shopping", "jewelry", "luxury"],
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    }
  ],
  "shortcuts": [
    {
      "name": "Browse Products",
      "short_name": "Products",
      "description": "Browse our premium jewelry collection",
      "url": "/products"
    },
    {
      "name": "My Cart",
      "short_name": "Cart", 
      "description": "View items in your shopping cart",
      "url": "/cart"
    },
    {
      "name": "My Account",
      "short_name": "Account",
      "description": "Manage your account and orders",
      "url": "/profile"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+auraa",
      "url": "/product?id=%s"
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "handle_links": "preferred",
  "prefer_related_applications": false
}